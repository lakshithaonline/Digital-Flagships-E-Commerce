<!DOCTYPE html>
<html lang="en">
<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>

        body {
            background-color: #f8f9fa;
        }

        form {
            margin-top: 50px;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .btn-success {
            background-color: #f39c12;
            border-color: #f39c12;
        }

        .card {
            border: none;
        }

        .card-header {
            background-color: #f39c12;
            color: #fff;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <%- include('layout/header') %>

    <div class="container">
        <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <input type="text" id="name" class="form-control form-control-lg" placeholder="Enter name" value="<%= user.name  %>" name="name"  />
            </div>
            <div class="mb-3">
                <label for="Category" class="form-label">Category:</label>
                <input type="text" id="Category" class="form-control form-control-lg" placeholder="Enter Category" value="<%= user.Category  %>" name="Category" />
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price:</label>
                <input type="number" id="price" class="form-control form-control-lg" placeholder="Enter phone" value="<%= user.price  %>"  name="price" />
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Select Image:</label>
                <input type="file" id="image" class="form-control form-control-lg" name="image"   enctype="multipart/form-data"/>
                <img src="/<%= user.Image  %>" width="100" class="img-thumbnail mt-1">
            </div>
            <input type="hidden" name="old_image" value="<%= user.Image %>">
            <div class="mb-3 d-gride">
            <input type="submit" name="submit" value="Update User" class="btn btn-success btn-lg"/>
            </div>
        </form>
    </div>

    <!-- Footer -->
    <%- include('layout/footer') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
