<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        /* inbuilt temporary cart styling */
    </style>
</head>
<body>
    <button id="show-cart-button">Show Cart</button> <!-- Add a button to show the cart -->
    <div class="cart-container cart-hidden">
        <h2>Your Cart</h2>
        <ul id="cart-items"></ul>
        <p id="cart-total">Total: $0</p>
        <button id="checkout-button">Proceed to Checkout</button>
        <button id="clear-cart-button">Clear Cart</button>
    </div>  
    <script src="./cartfunction.js"></script>
    <script>
        
    $(document).ready(function() {
        // Your existing code here

        $("#show-cart-button").click(function() {
            // Toggle the cart's visibility by adding/removing the "cart-show" class
            $(".cart-container").toggleClass("cart-show");
        });
    });

    </script>
</body>
</html>
