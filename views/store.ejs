<head>
    <style>
          body {
            background-color: #f5f5f5;
        }


        .product-card {
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            margin-bottom: 20px;
            background-color: #fff;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            max-width: 300px; 
            margin: 10 auto; 
        
        }

        .product-img {
            width: auto;
            height: auto;
            
            max-height: 180px; 
            object-fit:contain;
            display: block; 
            margin: 0 auto;
        }

        .product-details {
            padding: 10px; 
            justify-content: space-between;
        }

        .product-title {
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 8px;
        }

        .product-price {
            color: black;
            font-weight: bold;
            font-size: 16px;
            margin-bottom: 10px;
        }

        .product-qty {
            color: black;
            font-weight: initial;
            font-size: 13px;
            margin-bottom: 10px;
        }

        .add-to-cart-btn {
            display: block;
            width: 100%;
            background-color: #ff9800;
            color: #fff;
            text-align: center;
            padding: 8px 0;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .add-to-cart-btn:hover {
            background-color: #f57c00;
        }

        .custom-column {
            margin-bottom: 0px; 
            margin-left: 0px;
        }
        
        .store-header {
            text-align: center;
            margin-top: 20px;
            padding: 20px;
            background-color: #f57c00;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .store-header h1 {
            margin-bottom: 10px;
            font-size: 2rem;
        }

        .store-header p {
            font-size: 1rem;
            color: #666;
        }


        .banner {

            width: 100%;
            height: 200px;
            overflow: hidden;
            border-radius: 10px;
            margin-top: 30px;
        }

        .banner {
            z-index: 1; 
        }

        .slideshow-container {
            display: flex;
            width: 100%;
            height: 100%;
            transition: transform 0.5s ease-in-out;
        }

        .slide {
            flex: 0 0 100%;
        }

        .slide img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
                
        .search-bar {
            text-align: center;
            margin-bottom: 20px;
        }

        #product-search {
            padding: 8px;
            width: 60%;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-top: 20px;
            outline: none;
        }

        #search-button {
            padding: 8px 15px;
            background-color: #ff9800;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        #search-button:hover {
            background-color: #f57c00;
        }


        /* inbild temport cart */
        .cart-container {
            position: fixed;
            top: 0;
            right: -300px;
            height: 100%;
            background-color: #f8f8f8;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            padding: 20px;
            border-radius: 10px;
            transition: right 0.3s;
            width: 300px; 
            max-height: 100vh; 
            overflow-y: auto;
        }

        .cart-container.cart-show {
            right: 0;
        }

        .toggle-cart-button {
            position: fixed;
            top: 15px;
            right: 20px;
            z-index: 100;
        }

        .toggle-cart-button button {
            background-color: #ff9800;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            padding: 8px 15px;
            transition: background-color 0.3s;
            display: flex;
            align-items: center;
            margin-top: auto;
        }

        .toggle-cart-button button i {
            margin-right: 5px;
        }
        .toggle-cart-button button:hover {
            background-color: #f57c00;
        }

        #cart-items {
            list-style: none;
            padding: 0;
        }

        #cart-items li {
            margin-bottom: 8px;
        }

        #cart-total {
            font-weight: bold;
            margin-top: 10px;
        }

        #checkout-button,
        #clear-cart-button {
            display: block;
            width: 100%;
            background-color: #ff9800;
            color: #fff;
            text-align: center;
            padding: 8px 0;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-top: 10px;
        }

        #checkout-button:hover,
        #clear-cart-button:hover {
            background-color: #f57c00;
        }

        .cart-hidden {
            display: none;
        }

        .cart-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 5;
            display: none;
        }

        .cart-container.cart-show + .cart-overlay {
            display: block;
        }

        .cart-product-details {
            display: flex;
            justify-content: space-between;
           
            margin-bottom: 10px;
        }

        .cart-product-name {
            font-weight: bold;
        }

        .cart-product-price-qty {
            display: flex;
            flex-direction: column;
            align-items: flex-end;
        }

        .cart-product-qty,
        .cart-product-price {
            font-size: 14px;
            color: #666;
        }

        .cart-product-actions button {
            background-color: #ff9800;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            padding: 5px 10px;
            margin-left: 5px;
            transition: background-color 0.3s;
        }

        .cart-product-actions button:hover {
            background-color: #f57c00;
        }

                

    </style>
</head>
<body>
    
    <%- include('publicnavbar/navbar') %>

    <div class="container">
        <div class="banner">
            <div class="slideshow-container">
                <div class="slide"><img src="https://raw.githubusercontent.com/lakshithaonline/Digital-Flagships-E-Commerce/main/views/Images/StoreBanner/20050343.jpg" alt="Banner Image"></div>
                <div class="slide"><img src="https://raw.githubusercontent.com/lakshithaonline/Digital-Flagships-E-Commerce/main/views/Images/StoreBanner/2005044.jpg" alt="Banner Image"></div>
                <div class="slide"><img src="https://raw.githubusercontent.com/lakshithaonline/Digital-Flagships-E-Commerce/main/views/Images/StoreBanner/2005066.jpg" alt="Banner Image"></div>
            </div>
        </div>
        <div class="search-bar">
            <input type="text" id="product-search" placeholder="Search for products...">
            <button id="search-button">Search</button>
        </div>
        <div class="row my-4">
            <% if (users != '') { %>
                <% users.forEach((row, index) => { %>
                    <div class="col-md-3 custom-column">
                        <div class="product-card">
                            <img src="<%= row.Image %>" alt="Product Image" class="product-img">
                            <div class="product-details">
                                <div class="product-title"><%= row.name %></div>
                                <div class="product-price">Rs. <%= row.price %></div>
                                <div class="product-qty">Qty: <%= row.quantity %></div>
                                <button class="add-to-cart-btn" data-product-name="<%= row.name %>" data-product-price="<%= row.price %>">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h1 class="text-center text-secondary mt-5">No products found in the database!</h1>
            <% } %>
        </div>
    </div>
    <%- include('cart.ejs') %>

    <%- include('publicnavbar/publicfooter') %>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {

            //slide in header:
            const slides = $(".slide");
            const slideshowContainer = $(".slideshow-container");
            let currentSlide = 0;
    
            function showSlide(slideIndex) {
                slideshowContainer.css("transform", `translateX(-${slideIndex * 100}%)`);
            }
    
            function nextSlide() {
                currentSlide = (currentSlide + 1) % slides.length;
                showSlide(currentSlide);
            }
    
            setInterval(nextSlide, 3000);

        });

        //search
        $("#search-button").click(function() {
            const searchTerm = $("#product-search").val().toLowerCase();
            $(".product-card").each(function() {
                const productName = $(this).find(".product-title").text().toLowerCase();
                if (productName.includes(searchTerm)) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        
    });

    </script>    
</body>